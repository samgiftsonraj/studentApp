<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categoryCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="0.5dp">

    <ImageView
        android:id="@+id/gridIcon1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="9dp"
        android:contentDescription="@string/gridicon1"
        android:src="@drawable/class_timetable_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/gridIcon2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/class_timetable_2"
        app:layout_constraintBottom_toBottomOf="@+id/gridIcon1"
        app:layout_constraintEnd_toEndOf="@+id/gridIcon1" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yellixmedium"
        android:lineHeight="18sp"
        android:text="Class \n TimeTable"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:maxLines="2"
        android:padding="9dp"
        app:layout_constraintEnd_toEndOf="@+id/gridIcon1"
        app:layout_constraintStart_toStartOf="@+id/gridIcon1"
        app:layout_constraintTop_toBottomOf="@+id/gridIcon1" />

    <View
        android:id="@+id/cardBorderRight"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/cardBorderBottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>